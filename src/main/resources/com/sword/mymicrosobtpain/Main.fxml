<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sword.mymicrosobtpain.CanvasController">
    <top>
        <MenuBar>
            <Menu text="File">
                <MenuItem text="Load" onAction="#loadImage"/>
                <MenuItem text="Save" onAction="#saveImage"/>
            </Menu>

            <Menu text="Canvas">
                <MenuItem text="Clear canvas" onAction="#clearCanvas"/>
                <MenuItem text="Undo" onAction="#undo"/>
            </Menu>
            
            <Menu text="Colors">
                <MenuItem text="Blue"/>
                <MenuItem text="Red"/>
                <MenuItem text="Black"/>
            </Menu>

            <Menu text="About">
                <MenuItem text="About us" onAction="#handle"/>
            </Menu>
        </MenuBar>
    </top>
    <center>
        <Canvas fx:id="canvas" width="800" height="600"/>
    </center>
</BorderPane>